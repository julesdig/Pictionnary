<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{{ 'dashboard.title'|trans }} | {% block title %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/MeshGuardLogo.png') }}">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}

    {% block head_javascripts %}
    {% endblock %}
</head>
<body
        class="{%- if body_class|default('theme-whbl') is same as('theme-whbl') %}theme-whbl{% else %}{{ body_class }}{% endif -%}"
        {% if body_id is defined %}id="{{ body_id }}"{% endif %}
        {% if body_hx is defined %}{{ body_hx }}{% endif %}
>
{% set errors = app.flashes('error') %}
{% set successes = app.flashes('success') %}
{% set notices = app.flashes('info') %}
{% set warnings = app.flashes('warning') %}
{% block body %}
    <div id="theme-wrapper mb-5">
        <nav class="navbar navbar-expand-lg nav-background">
            <div class="container-fluid">
                <div class="container-fluid d-flex justify-content-between">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_user.list') }}">
                            <img alt="Mesh Guard" width="50" src="{{ asset('img/MeshGuardLogo.png') }}"
                                 class="img-fluid">
                        </a>
                    {% else %}
                        <a href="{{ path('dashboard.home') }}">
                            <img alt="Mesh Guard" width="50" src="{{ asset('img/MeshGuardLogo.png') }}"
                                 class="img-fluid">
                        </a>
                    {% endif %}
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item ms-2 me-2">
                                    <a class="nav-link link-darkBlue rounded"
                                       href="{{ path('admin_user.list') }}">{{ 'dashboard.nav.user'|trans }}</a>
                                </li>
                                <li class="nav-item ms-2 me-2">
                                    <a class="nav-link link-darkBlue rounded"
                                       href="{{ path('alerts_admin.list') }}">{{ 'dashboard.nav.alert'|trans }}</a>
                                </li>
                                <li class="nav-item ms-2 me-2">
                                    <a class="nav-link link-darkBlue rounded"
                                       href="{{ path('admin_device.list') }}">{{ 'dashboard.nav.device'|trans }}</a>
                                </li>

                            {% endif %}
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item ms-auto ">
                                <a class="nav-link link-darkBlue rounded " href="{{ path('app_logout') }}"
                                   tabindex="-1">{{ 'dashboard.nav.disconnect'|trans }}</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </nav>
        {% block full_content %}
            <div class="container-fluid mt-4">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </div>
    <footer class="footer mt-auto py-3 bg-light fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">Â© {{ "now"|date('Y') }} {{ 'dashboard.footer'|trans }} </span>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
    <script type="text/javascript" src="{{ asset('js/main/jquery.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options.progressBar = true;
        toastr.options.closeDuration = null;
        {%- if errors is iterable -%}
        {%- for error in errors -%}
        toastr.error('{{ error|trans }}');
        {%- endfor -%}
        {%- endif -%}
        {%- if successes is iterable -%}
        {%- for success in successes -%}

        toastr.success('{{ success|trans }}');
        {%- endfor -%}
        {%- endif -%}
        {%- if notices is iterable -%}
        {%- for notice in notices -%}
        toastr.info('{{ notice|trans }}');
        {%- endfor -%}
        {%- endif -%}
        {%- if warnings is iterable -%}
        {%- for warning in warnings -%}
        toastr.warning('{{ warning|trans }}');
        {%- endfor -%}
        {%- endif -%}

    </script>
{% endblock %}

</body>
</html>
